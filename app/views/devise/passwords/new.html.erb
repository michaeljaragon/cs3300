<div class="container text-center">
  <h1 class="display-3">Forgot your password?</h1>
  
  <div class="pass-page"><div class="card"><div class="card-block">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <p><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
      </div>

      <div class="actions">
        <p><%= f.submit 'Send password reset instructions', :class => "btn btn-primary"%></p>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div></div></div>
  
</div>

